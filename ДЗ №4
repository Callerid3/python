import random
# числа рандома от / до
value = random.randint(1,10)
# счетчик для wihle
count=0
#список a
a=[]
min=10
max=0
# цикл построения программы
while count < 10:
    if count < 10:
        b=random.randint(1,10)
        if b < min:
            min=b
        if b > max:
            max=b
        a.append(b)
        count=count+1
# печать списка a
print(a)
print("минимальное число =", min)
print("максимальное число =", max)
# индекс минимального и максимального числа
c=a.index(min)
d=a.index(max)
# удаление минимального и максимального числа
a.remove(min)
a.remove(max)
# постановка максимального числа на минимальное
a.insert(c, max)
# постановка минимального числа на максимальное
a.insert(d, min)
print(a)
